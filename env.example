# Appalachia Radio Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# Music Directory Paths
# Paths can use ~ for home directory expansion
# If not set, defaults will be used
REGULAR_MUSIC_PATH=~/source/appalachia-radio/songs
HOLIDAY_MUSIC_PATH=~/source/appalachia-radio/holiday_songs
DJ_PATH=~/source/appalachia-radio/julie

# YouTube Live Streaming Configuration
# Get your stream key from: YouTube Studio > Go Live > Stream Settings
YOUTUBE_STREAM_KEY=your-stream-key-here
YOUTUBE_ENABLED=true

# Video Configuration
YOUTUBE_VIDEO_SOURCE=video
YOUTUBE_VIDEO_FILE=/path/to/your/video.mp4
YOUTUBE_VIDEO_SIZE=1280x720
YOUTUBE_VIDEO_FPS=30

# Audio Configuration (optional, defaults shown)
# YOUTUBE_AUDIO_DEVICE=default
# YOUTUBE_AUDIO_FORMAT=pulse
# YOUTUBE_SAMPLE_RATE=48000
# YOUTUBE_BITRATE=128k



