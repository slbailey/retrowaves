# Appalachia Radio Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# Music Directory Paths
# Paths can use ~ for home directory expansion
# If not set, defaults will be used
REGULAR_MUSIC_PATH=~/source/appalachia-radio/songs
HOLIDAY_MUSIC_PATH=~/source/appalachia-radio/holiday_songs
DJ_PATH=~/source/appalachia-radio/julie

# YouTube Live Streaming Configuration
# Get your stream key from: YouTube Studio > Go Live > Stream Settings
YOUTUBE_STREAM_KEY=your-stream-key-here
YOUTUBE_ENABLED=true

# Video Configuration
YOUTUBE_VIDEO_SOURCE=video
YOUTUBE_VIDEO_FILE=/path/to/your/video.mp4
YOUTUBE_VIDEO_SIZE=1280x720
YOUTUBE_VIDEO_FPS=30
# Video bitrate (required for smooth streaming - YouTube minimums: 720p=4000k, 1080p=6000k)
# If not set, auto-selected based on resolution
# YOUTUBE_VIDEO_BITRATE=4000k

# Audio Configuration (optional, defaults shown)
# YOUTUBE_AUDIO_DEVICE=default
# YOUTUBE_AUDIO_FORMAT=pulse
# YOUTUBE_SAMPLE_RATE=48000
# YOUTUBE_BITRATE=128k

# ALSA Device Configuration (for FM transmitter playback)
# If you get "device busy" errors, try specifying a different ALSA device
# List available devices with: aplay -l
# Examples:
#   SDL_AUDIODEVICE=hw:0,0  (First card, first device - default)
#   SDL_AUDIODEVICE=hw:1,0  (Second card, first device - e.g., USB audio)
#   SDL_AUDIODEVICE=hw:2,0  (Third card, first device - e.g., HDMI)
# SDL_AUDIODEVICE=

# Audio Buffer Configuration (to reduce ALSA underruns)
# Larger buffer = fewer underruns but more latency
# Smaller buffer = more underruns but less latency
# Recommended: 4096-8192 for Raspberry Pi to prevent underruns
# AUDIO_BUFFER_SIZE=4096
# AUDIO_FREQUENCY=48000

# Debug Configuration
# Enable verbose debug logging (periodic stats, frame-by-frame logs, etc.)
# Set to true to see detailed logging, false to reduce log noise
# DEBUG=false

# Playlist State Persistence
# Path to save/load playlist state (history and play counts)
# This preserves weighted playlist state across graceful restarts to prevent repeats
# PLAYLIST_STATE_PATH=/tmp/playlist_state.json

# PID File Path (optional)
# Path for the PID file used by restart scripts
# Default: /var/run/appalachia-radio.pid (if writable) or project directory
# Note: /tmp is not recommended when running under systemd (uses private /tmp)
# PID_FILE=/var/run/appalachia-radio.pid

# DJ Cadence Configuration
# Minimum number of songs between DJ segments (intro/outro)
# Valid range: 2-4 (default: 3)
# Lower values = more frequent DJ segments, higher values = less frequent
# DJ_CADENCE_MIN_SONGS=3



